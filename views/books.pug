extends layout

block content
  h1 Search Results - Books

  .container-fluid
    .row
      each book in results
        .col-sm-2(onclick=`buy(${book._id})`)
          .search-result
            h6 Title: #{book.title}
            h6 Author: #{book.author}
            h6 Year: #{book.year}

  a(href="/index") Back to index page 

  script.
    function buy(id) {
      alert(`You purchased item ${id}`);
    }
